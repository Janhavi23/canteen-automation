<style>
  body {
margin: 0;
padding: 0;
background-image: url("https://etimg.etb2bimg.com/photo/75161189.cms");
background-size: cover;
background-size: cover;
height: 100vh;
font-family: Century Gothic;
}

.box {
width: 400px;
height: 600px;
background-color: #000000b3;
color: #fff;
position: absolute;
transform: translate(-50%,-50%);
left: 50%;
top: 50%;
padding: 70px 30px;
border: 3px solid black;
box-sizing: border-box;
border-radius: 10px;  
}

input[type=text] {
width: 400px;
height: 16px;
border: 2px solid black;
background-color: transparent;
border-radius: 5px;
font-family: "Exo", sans-serif;
font-size: 20px;
padding: 12px;
margin: 4px;
}

.logo{
width: 100px;
height: 100px;
border-radius: 50%;
position: absolute;
top: -50px;
left: calc(50% - 50px);
}

p{
color:cadetblue;
font-size: 20px;
}
h1{
margin: 0;
padding: 0 0 20px;
text-align: center;
font-size: 22px;
}

.box input{
width: 100px;
margin-bottom: 20px;
}
.box input[type="name"],input[type="password"],input[type="age"],input[type="address"],input[type="email"],input[type="gender"],input[type="phone_no"] {
border: none;
border-bottom: 1px solid #fff;
background-color: transparent;
outline: none;
width: 220px;
height: 30px;
color: #fff;
font-size: 16px;
}

.box button[type="submit"]{
border:none;
background-color: #756f73;
outline: none;
width: 100px;
height: 40px;
color: #fff;
font-size: 16px;
border-radius: 20px;
transition: 0.4s ease;
}

.box button[type="submit"] :hover{
cursor: pointer;
background-color: #ffc107;
color:#000;

}
</style>
<div class="box" align="center">
  <img src="https://images.unsplash.com/photo-1498837167922-ddd27525d352?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxleHBsb3JlLWZlZWR8Mnx8fGVufDB8fHw%3D&w=1000&q=80" class="logo">
  <h1 align="center">REGISTER</h1>
    <form  action="/users/register"method="POST">
       <input type="name" id="name" name="name" placeholder="Enter name" value="<%= typeof name != 'undefined' ? name : '' %>"><br>
        <input type="password" id="password" name="password" placeholder="Enter password" value="<%= typeof name != 'undefined' ? name : '' %>"><br>
        <input type="age" id="age" name="age" placeholder="Enter age" value="<%= typeof age != 'undefined' ? age : '' %>"><br>
        <input type="address" id="address" name="address" placeholder="Enter address" value="<%= typeof address != 'undefined' ? address: '' %>"><br>
        <input type="email" id="email" name="email" placeholder="Enter email" value="<%= typeof email != 'undefined' ? email : '' %>"><br>
        <input type="gender" id="gender" name="gender" placeholder="Enter gender" value="<%= typeof gender != 'undefined' ? gender : '' %>"><br>
        <input type="phone_no" id="phone_no" name="phone_no" placeholder="Enter phone_no" value="<%= typeof phone_no != 'undefined' ? phone_no : '' %>"><br>
        <button type="submit"><a href="/users/home"><b>Register</b></a></button>
    </form>
    <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    <br>       
</div>
              
            
           